# Environment Configuration Template for TasklistApp
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/tasklistdb
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Application Configuration
SERVER_PORT=8080
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# Logging Configuration
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_TASKLIST=DEBUG
LOG_FILE=tasklist.log

# Spring Profiles (choose one)
# SPRING_PROFILES_ACTIVE=docker  # For Docker deployment
# SPRING_PROFILES_ACTIVE=kubernetes  # For Kubernetes deployment
# SPRING_PROFILES_ACTIVE=vm  # For VM deployment
