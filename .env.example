# Environment Configuration Template for TasklistApp
# Copy this file to .env and fill in your actual values
# These values should match your GitHub repository secrets

# Database Configuration (from GitHub secrets)
DB_URL=jdbc:postgresql://localhost:5432/tasklistdb
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Frontend Configuration (from GitHub secrets)
FRONTEND_API_URL=http://localhost:8080

# Application Configuration
SERVER_PORT=8080
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# Logging Configuration
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_TASKLIST=DEBUG
LOG_FILE=tasklist.log

# Spring Profiles (choose one)
# SPRING_PROFILES_ACTIVE=docker  # For Docker deployment
# SPRING_PROFILES_ACTIVE=kubernetes  # For Kubernetes deployment
# SPRING_PROFILES_ACTIVE=vm  # For VM deployment

# Docker Registry Configuration (from GitHub secrets)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Sudo Password for WSL operations (from GitHub secrets)
SUDO_PASSWORD=your_wsl_sudo_password

# Ansible Vault Password (from GitHub secrets)
ANSIBLE_VAULT_PASSWORD=your_ansible_vault_password
